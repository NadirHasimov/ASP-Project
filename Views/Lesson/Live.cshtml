@model IEnumerable<Marmara.Models.tblMessage>
@{
    ViewBag.Title = "Live";
}


<!-- START SECTION BREADCRUMB -->
<section class="page-title-light breadcrumb_section parallax_bg overlay_bg_50" data-parallax-bg-image="/Public/site/images/about_bg.jpg">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <div class="page-title">
                    <h1>Canlı Dərs</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END SECTION BANNER -->

<section id="all_exams_section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                    <iframe src="https://iframe.dacast.com/live/8692f55f-659c-3097-2e8e-a2cf976d777f/62348fe9-0ddb-c176-60e6-49f34954b205" width="100%" height="100%" frameborder="0" scrolling="no" allow="autoplay" allowfullscreen webkitallowfullscreen mozallowfullscreen oallowfullscreen msallowfullscreen></iframe>
                </div>
            <div class="col-md-5">
                <div id="LiveChatBox">
                    <div class="container">
                        <input type="hidden" id="displayname" value="@ViewBag.NameSurname" />
                        <main>
                            <ul id="discussion" class="chat">
                                @foreach (var item in Model)
                                {
                                    <li class="you">
                                        <div class="entete">
                                            <span class="status"></span>
                                            <h2>@item.NameSurname</h2>
                                            <h3 id="LiveChatMsgTime">@item.MessageTime</h3>
                                        </div>
                                        <div class="triangle"></div>
                                        <div class="message">@item.Message</div>
                                    </li>
                                }
                            </ul>
                            <footer>
                                <div class="row">
                                    <div class="newsletter_form form_style2">
                                        <input id="message" type="text" class="form-control" required="" placeholder="Mesajınızı yazın...">
                                        <button id="sendmessage" type="button" title="Subscribe" class="btn btn-default btn-sm rounded-0" name="submit" value="Submit"><i class="fa fa-paper-plane" aria-hidden="true"></i></button>
                                    </div>
                                </div>
                            </footer>
                        </main>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script src="~/Public/site/js/SignalR.js"></script>
    <script src="~/Public/site/js/jquery.signalR-2.2.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
}

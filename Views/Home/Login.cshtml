
@{
    ViewBag.Title = "Login";
}

<!-- START SECTION BREADCRUMB -->
<section class="page-title-light breadcrumb_section parallax_bg overlay_bg_50" data-parallax-bg-image="/Public/site/images/about_bg.jpg">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <div class="page-title">
                    <h1>Giriş </h1>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END SECTION BANNER -->

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <img src="~/Public/site/images/login_img.jpg" style="width:100%;" alt="" />
            </div>
            <div class="col-md-7">
                <div class="padding_eight_all">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" id="login-tab1" href="~/home/login">Giriş</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="signup-tab1" href="~/home/registration">Qeydiyyat</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="login">
                            <div class="heading_s1 mb-3">
                                @if (Session["loginError"] != null)
                                {
                                    <span style="color:darkred">@Session["loginError"]</span>
                                }
                            </div>
                            <form action="@Url.Action("login","home")" method="post" class="login">
                                <div class="form-group">
                                    <input type="email" name="Email" class="form-control" placeholder="E-poçt" size="30" data-validation="server" data-validation-url=@Url.Action("checkExisting","home")>
                                </div>
                                <div class="form-group">
                                    <input type="password" name="Password" class="form-control" placeholder="Şifrə" size="16" data-validation="required" data-validation-error-msg="Şifrə daxil edin!">
                                </div>
                                <div class="login_footer form-group">
                                    @*<a href="@Url.Action("forgotpassword","home")">Şifrəni unutmusunuz?</a>*@
                                    <div class="chek-form mb-3">
                                        <div class="custome-checkbox">
                                            <input class="form-check-input" type="checkbox" name="checkbox" id="exampleCheckbox3" value="">
                                            <label class="form-check-label" for="exampleCheckbox3">Yadda saxla</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-default btn-block" name="login">Daxil ol</button>
                                </div>
                            </form>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@model Marmara.Models.tblLesson

@{
    ViewBag.Title = "Edit";
}


<div class="app-title">
    <div>
        <h1>Ders Düzenle</h1>
    </div>
    <ul class="app-breadcrumb breadcrumb side">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item">Dersler</li>
        <li class="breadcrumb-item active"><a href="#">Düzenle</a></li>
    </ul>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <label class="control-label col-md-2" for="Name">İsim</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a href="/Admin/lessons" class="btn btn-primary">Listeye geri dön</a>
            </div>
        </div>
    </div>
}
